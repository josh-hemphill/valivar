{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dist",
		"composite": true,
		"target": "es6",
		"module": "ES2020",
		"lib": [
			"ES2020"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"types": [
			"@types/node",
			"@types/jest"
		]
	},
	"include": [
		"./lib/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"release"
	]
}
