{
	"name": "valivar",
	"description": "Javascript/Typescript schema-based validation and sanitation",
	"version": "6.0.2",
	"contributors": [
		"jhemphill <jhemphill@tecnicocorp.com>"
	],
	"repository": "josh-hemphill/valivar",
	"keywords": [
		"validation",
		"validate",
		"valid",
		"validator",
		"object",
		"schema",
		"type",
		"guard"
	],
	"scripts": {
		"test": "npx jest -c config/jest.config.js -b --forceExit",
		"test-cov": "npx jest -c config/jest.config.js --coverage --runInBand --forceExit",
		"docs": "jsdoc -c config/jsdoc.js",
		"srv-docs": "live-server docs || npx live-server docs",
		"lint": "eslint lib test",
		"build": "rollup -c config/rollup.config.js",
		"validate": "run-s test lint",
		"check-release-token": "if [ -z ${CONVENTIONAL_GITHUB_RELEASER_TOKEN+x} ]; then echo 'Please set a release token for github deployment'; exit 1; fi",
		"prerelease": "npm run check-release-token && git checkout latest && git pull origin latest && npm i && run-s validate && git-authors-cli && git add .",
		"release": "standard-version -a",
		"postrelease": "run-s release:*",
		"release:tags": "git push --follow-tags origin latest",
		"release:github": "conventional-github-releaser -p angular && export CONVENTIONAL_GITHUB_RELEASER_TOKEN=''",
		"ci:validate": "rm -rf node_modules && npm ci && npm run validate",
		"prepublishOnly": "npm run ci:validate && npm run build"
	},
	"main": "dist/valivar.cjs.js",
	"browser": "dist/valivar.esm.js",
	"unpkg": "dist/valivar.js",
	"bugs": {
		"url": "https://github.com/josh-hemphill/valivar/issues"
	},
	"engines": {
		"node": ">= 10.14.2"
	},
	"dependencies": {},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@types/jest": "^26.0.10",
		"@typescript-eslint/eslint-plugin": "^3.10.0",
		"@typescript-eslint/parser": "^3.10.0",
		"@wessberg/rollup-plugin-ts": "^1.3.4",
		"babel-jest": "^26.3.0",
		"babel-plugin-add-module-exports": "^1.0.2",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
		"better-docs": "^2.3.2",
		"commitizen": "^4.2.1",
		"conventional-github-releaser": "^3.1.5",
		"eslint": "^7.7.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"git-authors-cli": "^1.0.28",
		"husky": "^4.2.5",
		"jest": "^26.4.2",
		"jsdoc": "^3.6.5",
		"lint-staged": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.26.9",
		"standard-version": "^9.0.0",
		"ts-jest": "^26.2.0",
		"tslib": "^2.0.1",
		"typescript": "^4.0.2"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"eslintConfig": {
		"extends": "./config/.eslintrc.js"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -g config/commitlint.config.js -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"lib/**/*.ts": [
			"eslint --fix",
			"git add"
		]
	}
}
